@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ArticlesOverview>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}
<div id="main-container">
    <div id="main" class="wrapper clearfix">
        <section>
            <h2>@Umbraco.Field("articlesTitle")</h2>
            <p>@Umbraco.Field("articlesBodyText")</p>
            @Umbraco.RenderMacro("listArticles")
        </section> 
        
        <p>List of news items</p>
        
        <ul>
            @foreach(var page in CurrentPage.Children)
            {
            <li><a href="@page.Url">@page.Name</a></li>
            }
        </ul>
    </div> <!-- #main -->
</div> <!-- #main-container -->